<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.goals.GoalsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Professional Header Card -->
        <androidx.cardview.widget.CardView
            style="@style/RBCCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_goals_header"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goals &amp; Savings"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track progress and achieve your financial dreams"
                    android:textColor="@color/rbc_blue_light"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <!-- Stats Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active Goals"
                            android:textColor="@color/rbc_blue_light"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$22,200"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Saved"
                            android:textColor="@color/rbc_blue_light"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="76%"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Progress"
                            android:textColor="@color/rbc_blue_light"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Progress Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overall Goal Completion"
                        android:textColor="@color/rbc_blue_light"
                        android:textSize="14sp" />

                    <ProgressBar
                        android:id="@+id/progress_overall"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:progress="76"
                        android:progressTint="@color/success_green_light"
                        android:progressBackgroundTint="@color/rbc_blue_dark" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Create New Goal Card -->
        <androidx.cardview.widget.CardView
            style="@style/RBCCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_add_goal"
                        app:tint="@color/rbc_blue" />

                    <TextView
                        style="@style/RBCTextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create New Goal"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <!-- Goal Form -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/rbc_blue"
                        app:hintTextColor="@color/rbc_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Goal Name (e.g., European Vacation 2025)" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:boxStrokeColor="@color/rbc_blue"
                            app:hintTextColor="@color/rbc_blue">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Target Amount"
                                android:inputType="numberDecimal" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:boxStrokeColor="@color/rbc_blue"
                            app:hintTextColor="@color/rbc_blue">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Target Date"
                                android:focusable="false"
                                android:clickable="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <Button
                        style="@style/RBCButtonPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="🎯 Create Goal &amp; Earn Points"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Goals Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Emergency Fund Goal -->
            <androidx.cardview.widget.CardView
                style="@style/RBCCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_emergency_fund"
                            app:tint="@color/rbc_blue" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                style="@style/RBCTextTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Emergency Fund" />

                            <TextView
                                style="@style/RBCTextBody"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$18,000 of $20,000" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90%"
                            android:textColor="@color/success_green"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="12dp"
                        android:progress="90"
                        android:progressTint="@color/success_green"
                        android:progressBackgroundTint="@color/border_light"
                        style="?android:attr/progressBarStyleHorizontal" />

                    <TextView
                        style="@style/RBCTextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target: Dec 2024"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Vacation Fund Goal -->
            <androidx.cardview.widget.CardView
                style="@style/RBCCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_vacation"
                            app:tint="@color/success_green" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                style="@style/RBCTextTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="European Vacation 2025" />

                            <TextView
                                style="@style/RBCTextBody"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$4,200 of $8,000" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52%"
                            android:textColor="@color/warning_yellow"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="12dp"
                        android:progress="52"
                        android:progressTint="@color/warning_yellow"
                        android:progressBackgroundTint="@color/border_light"
                        style="?android:attr/progressBarStyleHorizontal" />

                    <TextView
                        style="@style/RBCTextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target: Jun 2025"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Down Payment Goal -->
            <androidx.cardview.widget.CardView
                style="@style/RBCCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_home"
                            app:tint="@color/purple" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                style="@style/RBCTextTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="House Down Payment" />

                            <TextView
                                style="@style/RBCTextBody"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$85,000 of $100,000" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85%"
                            android:textColor="@color/success_green"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="12dp"
                        android:progress="85"
                        android:progressTint="@color/purple"
                        android:progressBackgroundTint="@color/border_light"
                        style="?android:attr/progressBarStyleHorizontal" />

                    <TextView
                        style="@style/RBCTextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target: Mar 2026"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Daily Challenges Card -->
        <androidx.cardview.widget.CardView
            style="@style/RBCCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar_check"
                        app:tint="@color/purple" />

                    <TextView
                        style="@style/RBCTextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Challenge"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/challenge_background"
                    android:padding="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="☕ Skip One Coffee Purchase"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            style="@style/RBCTextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save ~$5 today and earn bonus points"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+100"
                            android:textColor="@color/success_green"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="points"
                            android:textColor="@color/success_green"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    style="@style/RBCButtonPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mark as Complete"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>